{
    "compilerOptions": {
        "sourceMap": true,
        "esModuleInterop": true,
        "allowJs": true,
        "resolveJsonModule": true,
        "noImplicitAny": false,
        "moduleResolution": "node",
        "lib": ["es2018"],
        "module": "commonjs",
        "target": "es2018",
        "baseUrl": ".",
        "paths": {
            "*": ["node_modules/*", "src/types"]
        },
        "typeRoots": ["node_modules/*", "src/types"],
        "types": ["@types/node", "@types/jest"],
        "outDir": "./build",
        "alwaysStrict": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": ["node_modules", "**/*.test.ts"]
}