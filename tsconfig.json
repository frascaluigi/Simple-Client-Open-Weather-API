{
    "compilerOptions": {
        "sourceMap": true,
        "esModuleInterop": true,
        "allowJs": true,
        "noImplicitAny": false,
        "moduleResolution": "node",
        "lib": ["es2018"],
        "module": "commonjs",
        "target": "es2018",
        "baseUrl": ".",
        "paths": {
            "*": ["node_modules/*", "src/types"]
        },
        "typeRoots": ["node_modules/*", "src/types"],
        "outDir": "./build"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": ["node_modules"]
}